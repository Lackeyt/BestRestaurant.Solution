@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model BestRestaurant.Models.Cuisine;

<h1>Cuisine Details:</h1>
<hr />
<h2>@Html.DisplayFor(model => model.Name)</h2>
<h3>Region: @Html.DisplayFor(model => model.Region)</h3>

<h4>Restaurants:</h4>
<ul>
@if(Model.Restaurants.Count == 0)
{
<p>No Restaurants Found</p>
}

@foreach (Restaurant restaurant in @Model.Restaurants)
{
<li>@Html.ActionLink($"{restaurant.Name}", "Show", "Restaurant", new { id = restaurant.RestaurantId })</li>
}
</ul>

<p>@Html.ActionLink("Back to Cuisines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>