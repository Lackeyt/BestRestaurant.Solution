@{
  Layout = "_Layout";
}
@model BestRestaurant.Models.Restaurant;

<h1>Add new Restaurant</h1>
<br>
@using (Html.BeginForm())
{
  <div class ="form-group">
  <h4>@Html.LabelFor(model => model.Name)</h4>
  @Html.TextBoxFor(model => model.Name, new{ @class = "form-control"})
  
  <h4>@Html.LabelFor(model => model.Location)</h4>
  @Html.TextBoxFor(model => model.Location, new{ @class = "form-control"})

  <h4>@Html.LabelFor(model => model.Rating)</h4>
  @Html.TextBoxFor(model => model.Rating, new{ @class = "form-control"})

  <h4>@Html.LabelFor(model => model.PhoneNumber)</h4>
  @Html.TextBoxFor(model => model.PhoneNumber, new{ @class = "form-control"})
  <h4>Cuisine</h4>@Html.DropDownList("CuisineId")
  <input type="submit" value="Add new restaurant" class="btn btn-default" />
  </div>
}
<div class="bottom">
<p>@Html.ActionLink("Show all restaurants", "Index")</p>
